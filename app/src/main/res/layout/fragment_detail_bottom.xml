<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bank Penyedia"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="12dp"

            />

        <TextView
            android:layout_marginBottom="24dp"
            android:id="@+id/label_salesBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:id="@+id/salesBank_thumbnail"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_stock"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@id/label_salesBank"/>

        <TextView
            android:id="@+id/salesBank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/salesBank_thumbnail"
            android:layout_below="@id/label_salesBank"
            android:layout_marginVertical="8dp"
            android:text="bukalapak"/>

        <TextView
            android:id="@+id/label_sales_address_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/salesBank_thumbnail"
            android:text="Jalanadfafsffasfasfsfasfsfa"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="12dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>